<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymPal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GymPal"
    Style="{StaticResource TabBarStyle}"
    Title="GymPal">

    <TabBar>
        <Tab Title="Weight Training" Icon="weighttrainingtabicon.png">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Records" Icon="recordstabicon.png">
            <ShellContent Route="RecordsPage" ContentTemplate="{DataTemplate local:Pages.RecordsPage}" />
        </Tab>
    </TabBar>
</Shell>
